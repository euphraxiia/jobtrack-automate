# Django settings
SECRET_KEY=your-secret-key-here-change-this
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database config (PostgreSQL)
DATABASE_URL=postgres://jobtrack_user:your_password@localhost:5432/jobtrack_db
DB_NAME=jobtrack_db
DB_USER=jobtrack_user
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432

# Redis config (for Celery and caching)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Email settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# File storage
MEDIA_ROOT=/path/to/media
MAX_UPLOAD_SIZE_MB=10

# Selenium settings
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver
SELENIUM_HEADLESS=True
MAX_DAILY_APPLICATIONS=10
APPLICATION_DELAY_MIN=2
APPLICATION_DELAY_MAX=5

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# AWS S3 (optional, for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=af-south-1

# Sentry (optional, for error monitoring)
SENTRY_DSN=
